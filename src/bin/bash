#!/bin/bash

# Cyre Rust - Quick Run Commands
echo "ğŸš€ Cyre Rust - Quick Commands"
echo "=============================="

case "$1" in
    "build")
        echo "ğŸ”¨ Building Cyre Rust..."
        cargo build
        ;;
    "release")
        echo "ğŸš€ Building Release..."
        cargo build --release
        ;;
    "demo")
        echo "ğŸ­ Running Demo..."
        cargo run --bin demo
        ;;
    "advanced")
        echo "ğŸ¯ Running Advanced Demo..."
        cargo run --example advanced_demo
        ;;
    "test")
        echo "ğŸ§ª Running Tests..."
        cargo test -- --nocapture
        ;;
    "bench")
        echo "ğŸ“Š Running Benchmarks..."
        cargo bench
        ;;
    "clean")
        echo "ğŸ§¹ Cleaning Build..."
        cargo clean
        ;;
    "check")
        echo "âœ… Checking Code..."
        cargo check
        ;;
    "format")
        echo "ğŸ“ Formatting Code..."
        cargo fmt
        ;;
    "clippy")
        echo "ğŸ“ Running Clippy..."
        cargo clippy
        ;;
    "dev")
        echo "ğŸ”„ Development Cycle..."
        cargo check && cargo test && cargo run --bin demo
        ;;
    *)
        echo "Usage: ./run.sh [command]"
        echo ""
        echo "Commands:"
        echo "  build     - Build the project"
        echo "  release   - Build optimized release"
        echo "  demo      - Run basic demo"
        echo "  advanced  - Run advanced demo"
        echo "  test      - Run all tests"
        echo "  bench     - Run benchmarks"
        echo "  clean     - Clean build artifacts"
        echo "  check     - Check code without building"
        echo "  format    - Format code"
        echo "  clippy    - Run linter"
        echo "  dev       - Development cycle (check + test + demo)"
        echo ""
        echo "Examples:"
        echo "  ./run.sh build"
        echo "  ./run.sh demo"
        echo "  ./run.sh test"
        ;;
esac